<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:configChanges="keyboardHidden|orientation|screenSize"
    tools:context="com.revich.mobile.minority.Activity_Jugabilidad"
    android:background="#71a4d7"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/LogoMinority"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:src="@drawable/logominority"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:text="Sala: "
            android:textSize="20dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-20dp"
            android:text="CantJugadores:"
            android:textSize="20dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/tvSala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:textSize="20dp"
            android:layout_marginTop="-27dp" />

        <TextView
            android:id="@+id/tvCantJugadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:text="Monto a ganar:"
            android:textSize="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvMontoGanador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp" />

        <ImageView
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/monedasnuevo"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-25dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="Timer: 00:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvSegundosTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-24dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="-23dp"
            android:text="NÂ°Ronda: "
            android:textSize="20dp"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/tvNRonda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="-23dp"
            android:textSize="20dp"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/tvVotoFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:textSize="25dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnOpcion2"
            android:layout_width="105dp"
            android:layout_height="246dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:text="Pepsi"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal|right"
            android:gravity="center" />

        <Button
            android:id="@+id/btnOpcion1"
            android:layout_width="105dp"
            android:layout_height="246dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="20dp"
            android:background="#ffffff"
            android:clickable="false"
            android:text="Coca"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginTop="-250dp" />

        <Button
            android:layout_width="123dp"
            android:layout_height="60dp"
            android:text="Votar"
            android:id="@+id/btnVotar"
            android:textColor="#ffffff"
            android:background="#000000"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="25dp" />

    </LinearLayout>

</RelativeLayout>
