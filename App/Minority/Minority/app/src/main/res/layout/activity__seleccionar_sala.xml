<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:configChanges="keyboardHidden|orientation|screenSize"
    tools:context="com.revich.mobile.minority.Activity_Jugabilidad"
    android:background="#71a4d7"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="1"
           android:background="#010101">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Usuario: IgalRevich"
               android:id="@+id/tvUsuario"
               android:textSize="25dp"
               android:layout_marginRight="25dp"
               android:textColor="#ffffff" />

           <ImageView
               android:id="@+id/imageView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="right"
               android:layout_marginRight="50dp"
               android:layout_marginTop="-26dp"
               android:src="@drawable/monedasnuevo" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:text="49"
               android:id="@+id/tvMonedas"
               android:layout_gravity="right"
               android:textSize="25dp"
               android:layout_marginTop="-32dp"
               android:layout_marginRight="20dp"
               android:layout_weight="0.21"
               android:textColor="#ffffff" />

       </LinearLayout>

        <Button
            android:id="@+id/btnSalaA"
            android:layout_width="135dp"
            android:layout_height="121dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="40dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Sala A"
            android:textSize="25dp"
            android:layout_weight="0.06"
            android:layout_gravity="left" />

        <Button
            android:id="@+id/btnSalaB"
            android:layout_width="135dp"
            android:layout_height="121dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-125dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Sala B"
            android:textSize="25dp"
            android:layout_weight="0.08"
            android:layout_gravity="right" />

        <Button
            android:id="@+id/btnSalaC"
            android:layout_width="135dp"
            android:layout_height="121dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="60dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Sala C"
            android:textSize="25dp"
            android:layout_weight="0.37" />

        <Button
            android:id="@+id/btnSalaD"
            android:layout_width="135dp"
            android:layout_height="121dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-125dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Sala D"
            android:textSize="25dp"
            android:layout_gravity="right" />

        <Button
            android:id="@+id/btnSalaE"
            android:layout_width="135dp"
            android:layout_height="121dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="60dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Sala E"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="135dp"
            android:layout_height="121dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-120dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Sala F"
            android:textSize="25dp"
            android:layout_gravity="right" />

    </LinearLayout>

</RelativeLayout>

