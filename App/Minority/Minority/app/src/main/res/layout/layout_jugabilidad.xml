<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:configChanges="keyboardHidden|orientation|screenSize"
    tools:context="com.revich.mobile.minority.Activity_Jugabilidad"
    android:background="#71a4d7"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/LogoMinority"
            android:layout_width="313dp"
            android:layout_height="89dp"
            android:src="@drawable/logominority" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sala: "
            android:textSize="25dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSala"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-33dp"
            android:layout_marginRight="80dp"
            android:text="D" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CantJugadores:"
            android:id="@+id/textView"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:layout_marginTop="-35dp"
            android:layout_marginRight="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:id="@+id/tvCantJugadores"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto a ganar:"
            android:id="@+id/textView2"
            android:textSize="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49"
            android:id="@+id/tvMontoGanador"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:layout_marginTop="-35dp"
            android:layout_marginRight="0dp" />

        <ImageView
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="right"
            android:src="@drawable/monedasnuevo"
            android:layout_weight="0.17"
            android:layout_marginRight="80dp"
            android:layout_marginTop="-40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer: 00:"
            android:id="@+id/textView3"
            android:textSize="25dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:id="@+id/tvSegundosTimer"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-34dp"
            android:textSize="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÂ°Ronda: "
            android:id="@+id/textView4"
            android:textSize="25dp"
            android:layout_marginTop="-35dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/textView5"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:layout_marginTop="-33dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Coca"
            android:id="@+id/btnOpcion1"
            android:layout_weight="0.60"
            android:textSize="25dp"
            android:background="#ffffff"
            android:layout_marginTop="97dp"
            android:clickable="false" />

        <Button
            android:id="@+id/btnOpcion2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-160dp"
            android:layout_weight="0.60"
            android:background="#ffffff"
            android:text="Pepsi"
            android:textSize="25dp" />

        <Button
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="Votar"
            android:id="@+id/btnVotar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:background="#000000" />

    </LinearLayout>

</RelativeLayout>
